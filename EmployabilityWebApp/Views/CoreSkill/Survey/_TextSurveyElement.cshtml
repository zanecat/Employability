@model EmployabilityWebApp.ViewModels.TextSurveyElementViewModel

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.Element.Id)

    <div class="element">
        <div class="element-header">
            <span class="element-header-content">
                @Html.Label(@HttpUtility.HtmlEncode(Model.Element.Description))
            </span>
        </div>
        <div class="text-element-box">
            @Html.TextAreaFor(model => model.SubAnswer.Text, new { cols="100%", rows = "5", htmlAttributes = new { @class = "form-control text-element-area" } })
        </div>
        <div class="text-element-msg">
            @Html.ValidationMessageFor(model => model.SubAnswer.Text, "", new {@class = "text-danger"})
        </div>
    </div>
</div>