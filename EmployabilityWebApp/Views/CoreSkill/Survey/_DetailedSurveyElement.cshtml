@using EmployabilityWebApp.ViewModels;
@model DetailedSurveyElementViewModel

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Element.Id)

    <div class="element">
        <div class="element-header">
            <span class="element-header-content">
                @HttpUtility.HtmlEncode(Model.Element.Description)
            </span>
        </div>

        <div class="detailed-element-options">
            <div class="detailed-element-option-header">
                @for (var i = 1; i <= Model.Element.DetailedOptions.Count; i++)
                {
                    <div class="detailed-element-option-cell">
                        Stage @i
                    </div>
                }
            </div>

            <div class="detailed-element-option-content">
                @foreach (var option in Model.Element.DetailedOptions)
                {
                    <div class="detailed-element-option-cell">
                        @option.Description
                    </div>
                }
            </div>

            <div class="detailed-element-option-content">
                @foreach (var option in Model.Element.DetailedOptions)
                {
                    <div class="detailed-element-option-cell">
                        @Html.RadioButtonFor(model => model.SubAnswer.ChoiceId,
                            option.Id,
                            new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                }
            </div>

        </div>
    </div>
</div>