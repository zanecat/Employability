@model EmployabilityWebApp.ViewModels.RegisterOrganizationViewModel
@{
    ViewBag.Title = "Register";
}

<h1 align="center"><br><br>Create new organisation</h1>

@using (Html.BeginRouteForm("Default", new { controller = "Account", action = "RegisterOrganization" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
   
    <h4 align="center"><br><br>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-5 control-label" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-5 control-label" })
        <div class="col-md-5">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
        <div class="col-md-5">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OrganizationName, new { @class = "col-md-5 control-label" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.OrganizationName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Domain, new { @class = "col-md-5 control-label" })
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Domain, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-7 col-md-10">
            <input type="submit" class="btn btn-primary btn-lg" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
